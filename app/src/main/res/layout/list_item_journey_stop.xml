<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="56dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:textAppearance="@style/TextAppearance.OVgo.Departure.Time"
        android:textColor="@color/sectionTitleOkColor"
        app:layout_constraintBottom_toTopOf="@id/label_departure_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12:44" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/TextAppearance.OVgo.Departure.Time"
        android:textColor="@color/sectionTitleOkColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_arrival_time"
        tools:text="12:45" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_departure_time_alignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00 +0"
        android:textAppearance="@style/TextAppearance.OVgo.Departure.Time"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_departure_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="end"
        app:constraint_referenced_ids="label_departure_time,label_departure_time_alignment,label_arrival_time" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_station_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.OVgo.Departure.Destination"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barrier_departure_time"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@sample/departures.json/data/direction" />

</androidx.constraintlayout.widget.ConstraintLayout>
