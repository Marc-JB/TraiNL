<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/departure_board_vertical_spacing">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/departure_board_horizontal_spacing"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textAppearance="@style/TextAppearance.OVgo.Departure.Time.Disabled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12:45" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textAppearance="@style/TextAppearance.OVgo.Departure.Destination.Disabled"
        app:layout_constraintEnd_toStartOf="@id/label_departure_time_alignment"
        app:layout_constraintStart_toEndOf="@id/label_departure_time"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Breda" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_cancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal"
        android:text="@string/departure_cancelled"
        android:textAppearance="@style/TextAppearance.OVgo.Departure.Cancelled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/label_direction"
        app:layout_constraintStart_toStartOf="@id/label_direction"
        app:layout_constraintTop_toBottomOf="@+id/label_direction"
        app:layout_constraintVertical_bias="0"
        tools:visibility="visible" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_operator_and_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/departure_board_horizontal_spacing"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.OVgo.Departure.OperatorAndCategory.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_direction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:text="R-net door Qbuzz\nStoptrein" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_departure_time_alignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/departure_board_horizontal_spacing"
        android:layout_marginBottom="4dp"
        android:textAppearance="@style/TextAppearance.OVgo.Departure.Time.Disabled"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12:45" />

</androidx.constraintlayout.widget.ConstraintLayout>
