<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="56dp">

            <FrameLayout
                android:id="@+id/background_current_station"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="@dimen/departure_board_horizontal_spacing"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/departure_board_horizontal_spacing"
                android:background="@drawable/station_background_style"
                android:elevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/label_station"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:elevation="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@android:color/white"
                app:fontFamily="@font/roboto_bold"
                app:layout_constraintBottom_toBottomOf="@id/background_current_station"
                app:layout_constraintEnd_toEndOf="@id/background_current_station"
                app:layout_constraintStart_toStartOf="@id/background_current_station"
                app:layout_constraintTop_toTopOf="@id/background_current_station"
                tools:text="Dordrecht" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/action_change_station"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="4dp"
                android:padding="4dp"
                android:src="@drawable/ic_edit"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@id/background_current_station"
                app:layout_constraintEnd_toEndOf="@id/background_current_station"
                app:layout_constraintTop_toTopOf="@id/background_current_station" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_departures"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layoutAnimation="@anim/list_item_layout_animation_slide_up"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_current_station"
                tools:itemCount="4"
                tools:layoutAnimation="@null"
                tools:listitem="@layout/list_item_departure"
                tools:visibility="visible" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/placeholder_list_departures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:indeterminate="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_current_station" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:background="@drawable/gradient_scroll_fade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
