<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Shapes -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.BottomSheet" parent="@style/ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_radius</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.BottomSheet" parent="">
        <item name="cornerSizeBottomRight">@dimen/card_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/card_radius</item>
    </style>

    <!-- Component styles -->
    <style name="Widget.App.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.BottomSheet</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.BottomSheet</item>
    </style>

    <!-- Main text styles -->
    <style name="TextAppearance.OVgo.SectionTitle" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/sectionTitleColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.OVgo.SectionTitle.Disabled" parent="@style/TextAppearance.OVgo.SectionTitle">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.OVgo.SectionText.Medium" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.OVgo.SectionText.Small" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Specific text styles -->
    <style name="TextAppearance.OVgo.Disruption.Title" parent="@style/TextAppearance.OVgo.SectionTitle" />

    <style name="TextAppearance.OVgo.Disruption.SubText" parent="@style/TextAppearance.OVgo.SectionText.Medium" />

</resources>
