<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Shapes -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.BottomSheet" parent="@style/ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_radius</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.BottomSheet" parent="">
        <item name="cornerSizeBottomRight">@dimen/card_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/card_radius</item>
    </style>

    <!-- Component styles -->
    <style name="Widget.App.Departure.Facility.Icon" parent="">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.App.Departure.TrainImages.ScrollableHolder" parent="">
        <item name="android:fillViewport">true</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:scrollbarThumbHorizontal">@null</item>
        <item name="android:scrollbarTrackHorizontal">@null</item>
    </style>

    <style name="Widget.App.Departure.Platform" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.OVgo.Departure.Platform</item>
    </style>

    <style name="Widget.App.DepartureDetails.Card" parent="">
        <item name="android:background">@drawable/bg_flat_card</item>
        <item name="android:paddingTop">@dimen/departure_details_card_padding</item>
        <item name="android:paddingBottom">@dimen/departure_details_card_padding</item>
        <item name="android:paddingStart">@dimen/departure_details_card_padding</item>
        <item name="android:paddingEnd">@dimen/departure_details_card_padding</item>
    </style>

    <style name="Widget.App.DepartureDetails.Card.FullWidth" parent="@style/Widget.App.DepartureDetails.Card">
        <item name="android:background">@drawable/bg_flat_card</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.BottomSheet</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.BottomSheet</item>
    </style>

    <style name="Widget.App.DepartureDetails.Stop" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">@dimen/departure_stops_item_min_height</item>
        <item name="android:paddingStart">@dimen/departure_stops_item_spacing_horizontal</item>
        <item name="android:paddingTop">@dimen/departure_stops_item_spacing_vertical</item>
        <item name="android:paddingEnd">@dimen/departure_stops_item_spacing_horizontal</item>
        <item name="android:paddingBottom">@dimen/departure_stops_item_spacing_vertical</item>
    </style>

    <!-- Main text styles -->
    <style name="TextAppearance.OVgo.SectionTitle" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/sectionTitleColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.OVgo.SectionTitle.Disabled" parent="@style/TextAppearance.OVgo.SectionTitle">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.OVgo.SectionText.Medium" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.OVgo.SectionText.Small" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Specific text styles -->
    <style name="TextAppearance.OVgo.Departure.Destination" parent="@style/TextAppearance.OVgo.SectionTitle" />

    <style name="TextAppearance.OVgo.Departure.Destination.Disabled" parent="@style/TextAppearance.OVgo.SectionTitle.Disabled" />

    <style name="TextAppearance.OVgo.Departure.Time" parent="@style/TextAppearance.OVgo.SectionTitle" />

    <style name="TextAppearance.OVgo.Departure.Time.Disabled" parent="@style/TextAppearance.OVgo.SectionTitle.Disabled" />

    <style name="TextAppearance.OVgo.Departure.RouteStations.Medium" parent="@style/TextAppearance.OVgo.SectionText.Medium" />

    <style name="TextAppearance.OVgo.Departure.OperatorAndCategory.Medium" parent="@style/TextAppearance.OVgo.SectionText.Medium" />

    <style name="TextAppearance.OVgo.Departure.Cancelled" parent="@style/TextAppearance.OVgo.SectionText.Medium">
        <item name="android:textColor">@color/sectionTitleWarningColor</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.OVgo.Departure.RouteStations.Small" parent="@style/TextAppearance.OVgo.SectionText.Small" />

    <style name="TextAppearance.OVgo.Departure.OperatorAndCategory.Small" parent="@style/TextAppearance.OVgo.SectionText.Small" />

    <style name="TextAppearance.OVgo.Departure.Platform" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="autoSizeMaxTextSize">48sp</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeStepGranularity">4sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="TextAppearance.OVgo.DepartureDetails.Card.Title" parent="@style/TextAppearance.OVgo.SectionTitle">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.OVgo.StationSearch.Item.Title" parent="@style/TextAppearance.OVgo.SectionTitle" />

    <style name="TextAppearance.OVgo.StationSearch.Item.SubText" parent="@style/TextAppearance.OVgo.SectionText.Medium" />

    <style name="TextAppearance.OVgo.Disruption.Title" parent="@style/TextAppearance.OVgo.SectionTitle" />

    <style name="TextAppearance.OVgo.Disruption.SubText" parent="@style/TextAppearance.OVgo.SectionText.Medium" />

</resources>
